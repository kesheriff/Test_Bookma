

<body>
<br>
<br>
<% unless current_user %>
<% else %>

<div class="center">
<%= form_tag search_path, :method => 'get' do %>

  <%= text_field_tag :search, params[:search] ,:class => 'input_search' %>
  <%= submit_tag "Search" ,:class => 'button_search' ,:autocomplete => "off"%>
  <% end %>
  </div>
  <br>
  <br>
<div class="center">
<div class="box_table">
<div class="table-wrapper-scroll-y my-custom-scrollbar">
<table class="table table-hover" width="70%" border="5px" bgcolor="#96bb7c" padding="15px">
  <thead>
    <tr>
    <th >Title</th>
    <th >Rating</th>
    <th colspan="1"></th>
    </tr>
  </thead>

  <tbody bgcolor="#f5f1da">
    <% @movies.each do |movie| %>
      <tr>
      <td padding: 15px ><img src="https://image.tmdb.org/t/p/w500/ %>" alt="" height="30%"><%= movie.title %></td>
      <td padding: 15px><%= movie.rating %></td>
      <td padding: 15px><%= link_to '<button class="button_table">Show</button>'.html_safe, movie_review_path(@movie)  %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div> 
</div> 

<% end %>

</body>